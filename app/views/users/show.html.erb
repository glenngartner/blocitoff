<div class='container'>
    <div class='row jumbotron'>
        <h1>
            Welcome,
            <%= current_user.email %>
        </h1>
    </div>

    <div class='row'>    
    <div class='col-md-6'>
        <h2>
            Your tasks:
        </h2>
    </div>
    </div>
    <div class='row'>
        <div class='col-md-6'>
            <h2>
                <% @items.each do |item| %>
                    <p class='task-item'>
                        <%= item.name %>
                            <p>
                                <% end %>
            </h2>
        </div>
    </div>
</div>

<div class="row">
  <div class="col-md-6">
    <% if current_user %>
      <div class='new-item'>
        <%= render 'items/form', item: Item.new, user: @user %>
      </div>
    <% end %>
  </div>
</div>